<% layout('/layout/boilerplate.ejs') %>

    <div class="row my-3">
        <div class="col-6 ">
            <div class="card">
                <img src="<%= campground.img  %>" class="" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <% campground.location %>
                    </li>
                    <li class="list-group-item ">$<%= campground.author.username %>/night</li>
                    <li class="list-group-item ">$<%= campground.price %>/night</li>
                </ul>
                <div class="card-body">
                    <a class="btn btn-info card-link" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= campground._id %>/delete?_method=delete"
                        method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2 class="mt-2">Leave a review</h2>
            <form action="/campgrounds/<%= campground._id %>/review" method="post" class="needs-validation" novalidate>
                <div class="my-2">
                    <label for="rating" class="form-label">Rating</label>
                    <input class="form-range" id="rating" name="review[rating]" type="range" min="1" max="5" required>
                </div>
                <div class="my-2">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                </div>
                <button class="btn btn-success">Add Review</button>
            </form>
            <% for (let review of campground.reviews) {%>
                <div class="card my-2">
                    <div class="card-body">
                        <h4 class="card-title">Raing: <%= review.rating %>
                        </h4>
                        <p class="card-text">Review: <%= review.body %>
                        </p>
                        <form class="d-inline" action="/campgrounds/<%= campground._id %>/review/<%=review._id %>/delete?_method=delete"
                            method="post">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>

        </div>
    </div>